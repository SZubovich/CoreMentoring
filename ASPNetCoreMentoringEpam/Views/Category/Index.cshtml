@using ASPNetCoreMentoringEpam
@using ASPNetCoreMentoringEpam.Helpers
@model IEnumerable<ASPNetCoreMentoringEpam.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>Pic</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @if (item.Picture != null)
                {
                    @Html.NorthwindImageLink(item.CategoryId, "HTML helper");
                }
                <northwind id="@item.CategoryId">Tag helper</northwind>
            </td>
        </tr>
}
    </tbody>
</table>
